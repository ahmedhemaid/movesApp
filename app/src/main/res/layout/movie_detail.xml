<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wallpaperMovie"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/wallpaper"
                ></ImageView>
            <ImageView
                android:id="@+id/profilePhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/movie"
                />
            <TextView
                android:id="@+id/movie_name_in_details"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Movie Name"
                android:layout_below="@+id/wallpaperMovie"
                android:layout_toRightOf="@+id/profilePhoto"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="#000000"
                />
            <TextView
                android:id="@+id/movie_description"
                android:layout_width="wrap_content"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePhoto"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16sp"
                android:text="here is a test for description of movie so for example let say its an animation moview about the lion king"
                android:textSize="20dp"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>