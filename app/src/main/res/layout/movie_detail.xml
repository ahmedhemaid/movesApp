<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wallpaperMovie"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                ></ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"
                app:civ_border_color="#FFF"
                app:civ_border_width="5dp"
                />
            <TextView
                android:id="@+id/movie_name_in_details"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Movie Name"
                android:gravity="center"
                android:fontFamily="cursive"
                android:layout_below="@+id/wallpaperMovie"
                android:layout_toRightOf="@+id/profilePhoto"
                android:layout_marginTop="10dp"
                android:textSize="32sp"
                android:textColor="#000000"
                />
            <ImageView
                android:id="@+id/favorite_movie_details"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/unfavorite"
                android:layout_below="@id/movie_name_in_details"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                android:layout_marginTop="20dp"
                ></ImageView>
            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/movie_name_in_details"
                android:elevation="20dp"
                android:layout_marginTop="32dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Details"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="16dp"
                    ></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E4000000"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    ></View>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textSize="20sp"
                    android:textColor="#C4000000"
                    android:layout_marginLeft="16dp"
                    ></TextView>
                <TextView
                    android:id="@+id/movie_budget"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePhoto"
                    android:layout_marginTop="0dp"
                    android:paddingHorizontal="16dp"
                    android:text="20000$"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:textSize="20sp"
                    android:textColor="#C4000000"
                    android:layout_marginLeft="16dp"
                    ></TextView>
                <TextView
                    android:id="@+id/movie_description"
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profilePhoto"
                    android:layout_marginTop="0dp"
                    android:paddingHorizontal="16dp"
                    android:text="here is a test for description of movie so for example let say its an animation moview about the lion king"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="20dp"
                android:layout_marginTop="16dp"
                android:layout_below="@id/description_layout"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actors of the movie"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="16dp"
                    ></TextView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/actors_of_movie_list_view"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Trailer"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    ></TextView>
                <WebView
                    android:id="@+id/trailer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="8dp"
                    tools:ignore="WebViewLayout">
                </WebView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Similar Movies"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="16dp"
                    ></TextView>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/similar_movies_recycler"
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>