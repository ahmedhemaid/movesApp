<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/border_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="300dp"
    android:layout_margin="5dp"

    >
    <ImageView
        android:id="@+id/actor_profile"
        android:layout_width="150dp"
        android:layout_height="270dp"
        android:layout_marginHorizontal="10dp"
        android:src="@drawable/willsmith"/>
    <TextView
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:id="@+id/text_view_actor_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/actor_profile"
        android:text="name of actor"
        />
    <ImageView
        android:id="@+id/favorite_actor"
        android:background="#FFFFFF"
        android:src="@drawable/unfavorite"
        android:layout_below="@+id/actor_profile"
        android:layout_alignRight="@+id/actor_profile"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>