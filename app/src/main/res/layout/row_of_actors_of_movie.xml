<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@drawable/border_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/actor_profile"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:id="@+id/text_view_actor_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-5dp"
        android:layout_below="@+id/actor_profile"
        android:text="name of actor"
        />
    <ImageView
        android:id="@+id/favorite_actor"
        android:background="#FFFFFF"
        android:src="@drawable/unfavorite"
        android:layout_below="@+id/actor_profile"
        android:layout_alignRight="@+id/actor_profile"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>