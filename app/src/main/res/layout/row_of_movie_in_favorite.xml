<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:background="@drawable/border_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<ImageView
    android:id="@+id/image_view_movie"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    />
    <TextView android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:textSize="15sp"
        android:id="@+id/text_view_movie_name_fav"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/image_view_movie"
        android:layout_centerVertical="true"
        android:text="name of movie"
         />
    <ImageView
        android:id="@+id/delete_icon_in_fav_movies"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
      android:layout_marginTop="-10dp"
        android:layout_below="@id/image_view_movie"
        android:layout_toRightOf="@id/text_view_movie_name_fav"
        ></ImageView>
    </RelativeLayout>
   </android.support.v7.widget.CardView>