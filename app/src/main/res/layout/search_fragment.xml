<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/search_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        >

    <EditText
        android:id="@+id/search_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Search"
        android:maxLines="1"
        android:inputType="text"
        android:background="@null"
        android:textSize="16sp"
        android:paddingHorizontal="20dp"
        android:layout_marginRight="16dp"
        />

        <ImageView
            android:id="@+id/clear_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/clear"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/search_all"
            android:layout_marginTop="16dp"
            ></ImageView>
        <LinearLayout
            android:id="@+id/data_type"
            android:layout_below="@id/search_all"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/is_movie"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Movies"
                android:textAllCaps="false"
                android:background="@null"
                ></Button>
            <Button
                android:id="@+id/is_actor"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Actors"
                android:textAllCaps="false"
                android:background="@null"
                ></Button>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/data_type"
            android:background="#AFADAD"
            ></View>
            </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contextClickable="true"
        android:layout_below="@id/search_all_layout"
        ></android.support.v7.widget.RecyclerView>

    </RelativeLayout>